<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.vindroidtech.activitites.ConfigSettingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Config Parameter"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP Address"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ediTextConfigIPAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Port"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ediTextConfigPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfigSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onButtonClicked"
            android:text="Save"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonConfigCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onButtonClicked"
            android:text="Cancel"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
